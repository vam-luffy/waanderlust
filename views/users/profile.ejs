<% layout('/layouts/boilerplate') -%>

<div class="container mt-5">
  <div class="row">
    <!-- User Profile Card -->
    <div class="col-md-4 mb-4">
      <div class="card profile-card">
        <div class="profile-header">
          <div class="profile-avatar">
            <i class="fa-solid fa-circle-user"></i>
          </div>
        </div>
        <div class="card-body text-center">
          <h3 class="card-title"><%= user.username %></h3>
          <p class="text-muted"><%= user.email %></p>
          
          <div class="profile-stats">
            <div class="stat">
              <h4>0</h4>
              <span>Listings</span>
            </div>
            <div class="stat">
              <h4>0</h4>
              <span>Trips</span>
            </div>
            <div class="stat">
              <h4>0</h4>
              <span>Reviews</span>
            </div>
          </div>
          
          <div class="mt-4">
            <a href="/user/edit" class="btn btn-outline-primary btn-sm">
              <i class="fa-solid fa-pen-to-square me-1"></i> Edit Profile
            </a>
          </div>
        </div>
      </div>
    </div>
    
    <!-- User Dashboard -->
    <div class="col-md-8">
      <!-- Action Cards -->
      <div class="row mb-4">
        <div class="col-md-4 mb-3">
          <a href="/user/listings" class="dashboard-card">
            <div class="card text-center h-100">
              <div class="card-body">
                <i class="fa-solid fa-house dashboard-icon"></i>
                <h5 class="mt-3">My Listings</h5>
                <p class="text-muted">Manage your properties</p>
              </div>
            </div>
          </a>
        </div>
        
        <div class="col-md-4 mb-3">
          <a href="/user/trips" class="dashboard-card">
            <div class="card text-center h-100">
              <div class="card-body">
                <i class="fa-solid fa-suitcase dashboard-icon"></i>
                <h5 class="mt-3">My Trips</h5>
                <p class="text-muted">View your bookings</p>
              </div>
            </div>
          </a>
        </div>
        
        <div class="col-md-4 mb-3">
          <a href="/listings/new" class="dashboard-card">
            <div class="card text-center h-100">
              <div class="card-body">
                <i class="fa-solid fa-plus dashboard-icon"></i>
                <h5 class="mt-3">Create Listing</h5>
                <p class="text-muted">Add a new property</p>
              </div>
            </div>
          </a>
        </div>
      </div>
      
      <!-- User Activity -->
      <div class="card">
        <div class="card-header">
          <h4>Recent Activity</h4>
        </div>
        <div class="card-body">
          <div class="activity-list">
            <div class="empty-state text-center py-5">
              <i class="fa-regular fa-calendar-xmark empty-icon"></i>
              <h5 class="mt-3">No Recent Activity</h5>
              <p class="text-muted">You haven't done anything on Wanderlust yet.</p>
              <a href="/listings" class="btn btn-primary mt-2">Explore Listings</a>
            </div>
          </div>
        </div>
      </div>
    </div>
  </div>
</div>

<style>
  .profile-card {
    border-radius: var(--border-radius);
    box-shadow: var(--box-shadow);
    overflow: hidden;
  }
  
  .profile-header {
    height: 120px;
    background-color: var(--primary-color);
    position: relative;
  }
  
  .profile-avatar {
    width: 100px;
    height: 100px;
    border-radius: 50%;
    background-color: var(--white);
    display: flex;
    align-items: center;
    justify-content: center;
    position: absolute;
    bottom: -50px;
    left: 50%;
    transform: translateX(-50%);
    border: 4px solid white;
    box-shadow: 0 4px 10px rgba(0, 0, 0, 0.1);
  }
  
  .profile-avatar i {
    font-size: 4rem;
    color: var(--primary-color);
  }
  
  .profile-card .card-body {
    padding-top: 60px;
  }
  
  .profile-stats {
    display: flex;
    justify-content: space-around;
    margin-top: 1.5rem;
    padding: 1rem 0;
    border-top: 1px solid #eee;
    border-bottom: 1px solid #eee;
  }
  
  .stat h4 {
    font-weight: 700;
    margin-bottom: 0.25rem;
    color: var(--primary-color);
  }
  
  .stat span {
    font-size: 0.8rem;
    color: var(--dark-gray);
  }
  
  .dashboard-card {
    text-decoration: none;
    color: inherit;
    display: block;
    height: 100%;
  }
  
  .dashboard-card .card {
    transition: var(--transition);
    border-radius: var(--border-radius);
    box-shadow: var(--box-shadow);
  }
  
  .dashboard-card:hover .card {
    transform: translateY(-5px);
    box-shadow: 0 8px 20px rgba(0, 0, 0, 0.12);
  }
  
  .dashboard-icon {
    font-size: 2.5rem;
    color: var(--primary-color);
  }
  
  .empty-icon {
    font-size: 4rem;
    color: var(--light-gray);
  }
  
  .activity-list {
    min-height: 300px;
  }
</style> 